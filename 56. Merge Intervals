class Solution {
    public int[][] merge(int[][] intervals) {
        if(intervals.length == 0) return intervals;
        List<int[]> res = new ArrayList<>();
        Arrays.sort(intervals, (item1, item2) -> item1[0] - item2[0]);
        int[] list = new int[2];
        res.add(new int[]{intervals[0][0],intervals[0][1]});
        for(int i = 1; i < intervals.length; i++){
            int[] lastlist = res.get(res.size() - 1);
            if(intervals[i][0] > lastlist[1]){
                res.add(new int[]{intervals[i][0],intervals[i][1]});
            }else if(intervals[i][1] > lastlist[1]){     //下一项的第二项如果大于添加到res中的最后一项的第二项，这里才需要更改最后一项的第二项
                res.get(res.size() - 1)[1] = intervals[i][1];
            }
        }
        return res.toArray(new int[res.size()][2]);
    }
}
